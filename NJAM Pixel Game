<body>
    <div id="game-container">
        <div id="character-screen" class="game-screen active"></div>
        <div id="night-screen" class="game-screen"></div>
        
        <!-- Start Game Button on Character Screen -->
        <button id="start-button" class="button">Start Game</button>
        
        <!-- Snooze and Ignore Buttons (these will only be functional on night screen) -->
        <button id="snooze-button" class="button" style="display: none;">Snooze</button>
        <button id="ignore-button" class="button" style="display: none;">Ignore</button>
        
        <!-- Back Button -->
        <button id="back-button" style="display: none;">Back</button>
    </div>
    
    <script>
        // Game elements
        const characterScreen = document.getElementById('character-screen');
        const nightScreen = document.getElementById('night-screen');
        const startButton = document.getElementById('start-button');
        const snoozeButton = document.getElementById('snooze-button');
        const ignoreButton = document.getElementById('ignore-button');
        const backButton = document.getElementById('back-button');
        
        // Start game function - Go from character screen to night screen
        function startGame() {
            characterScreen.classList.remove('active');
            nightScreen.classList.add('active');
            startButton.style.display = 'none';
            snoozeButton.style.display = 'block';
            ignoreButton.style.display = 'block';
            backButton.style.display = 'block';
        }
        
        // Snooze function
        function snoozeAlarm() {
            alert('You hit snooze... but the baby will cry again in 5 minutes!');
            // Here you could add more game logic or transition to another screen
        }
        
        // Ignore function
        function ignoreAlarm() {
            alert('Trying to ignore the baby... CHAOS meter increases!');
            // Here you could add more game logic or transition to another screen
        }
        
        // Back to character select function
        function goBack() {
            nightScreen.classList.remove('active');
            characterScreen.classList.add('active');
            startButton.style.display = 'block';
            snoozeButton.style.display = 'none';
            ignoreButton.style.display = 'none';
            backButton.style.display = 'none';
        }
        
        // Add event listeners
        startButton.addEventListener('click', startGame);
        snoozeButton.addEventListener('click', snoozeAlarm);
        ignoreButton.addEventListener('click', ignoreAlarm);
        backButton.addEventListener('click', goBack);
    </script>
</body>
