        }
        
        .game-screen {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            transition: opacity 0.5s ease;
            opacity: 0;
            pointer-events: none;
        }
        
        .game-screen.active {
            opacity: 1;
            pointer-events: auto;
